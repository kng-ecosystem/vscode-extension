{
	"name": "kng colour theme",
	"type": "dark",
	"colors": {
		"editor.background": "#2e2e2e",
		"editor.foreground": "#ffffff",
		"activityBarBadge.background": "#ffffff",
		"sideBarTitle.foreground": "#e0e0e0"
	},
	"tokenColors": [
		{
			"name" : "Comment",
			"scope" : [
				"comment.single.kng",
				"comment.multi.kng"
			],
			"settings" : {
				"fontStyle": "italic bold underline",
				"foreground": "#1bff06"
			}
		},
		{
			"name": "String",
			"scope": [
				"string.quoted.double.kng"
			],
			"settings": {
				"fontStyle": "italic",
				"foreground": "#ffa0b4"
			}
		},

		{
			"name" : "Parens, Curlys, Brackets",
			"scope" : [
				"open.paren.expression.kng",
				"close.paren.expression.kng",
				"open.curly.expression.kng",
				"close.curly.expression.kng",
				"open.bracket.expression.kng",
				"close.bracket.expression.kng",
			],
			"settings": {
				"foreground": "#ffffff"
			}
		}
	]
}